<MCard Width=510 Height=680 Class="mx-auto my-auto">

    <div class="mt-2 mx-auto text-center" style="width:360px;">
        <MAvatar Size=80>
            <MImage Src="/img/avatar/1.svg">
            </MImage>
        </MAvatar>
        <h5 class="mt-2 mb-12">Welcome to CambalucClub Literacy! <br /> 一起来提升语言水平吧👋</h5>

        <MTextField TValue="string"
                    Label="请输入用户名"
                    Placeholder="admin"
                    Outlined
                    HideDetails="@("auto")">
        </MTextField>
        <MTextField TValue="string"
                    Class="mt-6"
                    Label="请输入密码"
                    Type="@(_show ? "text" : "password")"
                    Placeholder=""
                    AppendIcon="@(_show ? "mdi-eye" : "mdi-eye-off")"
                    OnAppendClick="()=>_show = !_show"
                    Outlined
                    HideDetails="@("auto")">
        </MTextField>
        <span class="d-flex justify-end mt-1 text-caption hover-pointer">@*@onclick=@(()=>Navigation.NavigateTo(Navigation.BaseUri+ForgotPasswordRoute))*@
            忘记密码?
        </span>
        <MButton Class="mt-9 rounded-4 text-btn white--text" OnClick=OnLogin Height=40 Width=340 Color="primary">登录</MButton>
        <br />
        <MButton Class="mt-2 rounded-4 text-btn" OnClick=ReBack Height=40 Width=340>取消</MButton>

        <div class="my-6">
            <span class="text-btn">还没有用户? &nbsp;</span>
            <span class="primary--text hover-pointer">新用户注册</span>@*@onclick="@(()=>Navigation.NavigateTo(Navigation.BaseUri+CreateAccountRoute))"*@
        </div>
        <div class="mt-4">
            <MIcon Size=24 Color="neutral-lighten-2" OnClick="()=>{}">fab fa-codepen</MIcon>
            <MIcon Size=24 Color="neutral-lighten-2" Class="ml-6" OnClick="()=>{}">fab fa-github</MIcon>
            <MIcon Size=24 Color="neutral-lighten-2" Class="ml-6" OnClick="()=>{}">fab fa-twitter</MIcon>
            <MIcon Size=24 Color="neutral-lighten-2" Class="ml-6" OnClick="()=>{}">fab fa-instagram</MIcon>
            <MIcon Size=24 Color="neutral-lighten-2" Class="ml-6" OnClick="()=>{}">fab fa-microsoft</MIcon>
        </div>
      @*<div class="d-flex block-center">
            <div style="height:0.5px;width:162px;" class="neutral-lighten-5"></div>
            <span class="text-caption mx-4">其他方式</span>
            <div style="height:0.5px;width:162px;" class="neutral-lighten-5"></div>
        </div>*@
    </div>
</MCard>